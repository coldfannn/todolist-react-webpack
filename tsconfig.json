{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "sourceMap": true,
    "target": "ES5",
    "lib": ["es2015" ,"es2017", "es7", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./src/components",
    "skipLibCheck": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "newLine": "LF",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "server"
  ]
}
